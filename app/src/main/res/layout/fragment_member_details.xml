<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".members.MemberDetailsFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:id="@+id/relativel">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            android:id="@+id/linearmemberd">


            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                android:id="@+id/MemberProfilePic"
                android:background="@drawable/imgincircle"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textStyle="bold"
                android:id="@+id/MemberName"
                android:layout_marginTop="40dp"
                android:text="DSC Android"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:textStyle="italic"
                android:id="@+id/MemberIntro"
                android:text="asjdnajbaijbdjab jodabojfb odajo naojsn odnaojd naojn dojand ojan doano naon oa ndoan oano nason..."
                android:textSize="28sp"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="4dp"
            android:layout_margin="20dp"
            android:id="@+id/line"
            android:layout_below="@id/linearmemberd"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:paddingBottom="30dp"
            android:id="@+id/linearhorizontal">

            <ImageButton
                android:layout_width="60dp"
                android:src="@drawable/githublogo"
                android:scaleType="centerCrop"
                android:background="@drawable/btnbackgrnd"
                android:layout_margin="15dp"
                android:layout_height="60dp"
                android:visibility="gone"
                android:id="@+id/githubButton"
                android:contentDescription="hmm" />
            <ImageButton
                android:layout_width="60dp"
                android:visibility="gone"
                android:background="@drawable/btnbackgrnd"
                android:src="@drawable/linkedincircle"
                android:scaleType="centerCrop"
                android:layout_margin="15dp"
                android:id="@+id/linkedinButton"
                android:layout_height="60dp"/>
            <ImageButton
                android:layout_width="60dp"
                android:background="@drawable/btnbackgrnd"
                android:layout_margin="15dp"
                android:src="@drawable/instalogo"
                android:scaleType="centerCrop"
                android:id="@+id/instaButton"
                android:visibility="gone"
                android:layout_height="60dp"/>
            <ImageButton
                android:layout_width="60dp"
                android:background="@drawable/btnbackgrnd"
                android:layout_margin="15dp"
                android:src="@drawable/teitterlogo"
                android:scaleType="centerCrop"
                android:id="@+id/twitterButton"
                android:visibility="gone"
                android:layout_height="60dp"/>

        </LinearLayout>

    </RelativeLayout>


</FrameLayout>